<div class='container'>
  <div class='main'>
    <%= link_to "Sort By Popularity",  posts_sort_path %>
   <% @posts.each do |post|%>
   <div class='movie_post'>
     <%= link_to(post.title, post.trailer_url) %>
     <br>
     <%= link_to(image_tag(post.image_url, height: '200'), post.trailer_url) %>
     <%= post.votes.where(value: 1).count - post.votes.where(value: -1).count%>
     <%  if current_user %>
     <%= link_to "Up Vote", new_post_vote_path(post, :value => 1) %>
     <%= link_to "Down Vote", new_post_vote_path(post, :value => -1) %>
     <%  end %>
   </div>
   <% end %>
 </div>
</div>
